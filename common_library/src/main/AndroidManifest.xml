    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>     <!-- 网络定位权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />      <!-- 检测网络状态权限 -->
